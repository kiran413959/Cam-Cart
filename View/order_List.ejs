    <!-- ========== Main section ========== -->
    <main>


      <div class="top">
        <button id="menu-btn">
          <span class="material-icons-sharp"> menu </span>
        </button>
        <div class="theme-toggler">
          <span class="material-icons-sharp active"> light_mode </span>
          <span class="material-icons-sharp"> dark_mode </span>
        </div>
        <div class="profile">
          <div class="info">
            <p>Hey, <b>Daniel</b></p>
            <small class="text-muted">Admin</small>
          </div>
          <div class="profile-photo">
            <img src="orders-main/img/profile-1.jpg" alt="Daniel" />
          </div>
        </div>
      </div>


      <h1>Orders List</h1>
      <div class="date">
        <input type="date" id="date-picker" />
      </div>
      <div class="insights">
        <!-- ---------- orders ---------- -->

        <% orders.forEach((data)=>{ %>
          <% data.products.forEach((order)=>{ %>

            <div class="sales  product_order">
              <img src="/images/<%= order.productId.imageurl %>" alt="productimage" style="width: 60px;">
              <div class="middle">
                <div class="left">
                  <h1>
                    <%= order.productId.name %>
                  </h1>
                  <h3>
                    <%= order.productId.category %>
                      <h3>
                </div>
                <div class="progress">
                  <button id="eye_btn"  class="eye_btn" data-product-id=" <%= order.productId._id %>" >
                    <span class="material-symbols-outlined">
                      visibility
                    </span>
                  </button>
                </div>


              </div>
              <small class="text-muted">Status: <%= data.status %></small>
            </div>

            <% })%>
              <% })%>


      </div>

  


      <% orders.forEach((data)=>{ %>
        <% data.products.forEach((order)=>{ %>

          <section class="order_product" data-product-id=" <%= order.productId._id %>" >
            <div class="modal_centered">
              <div class="containers">
                <!-- <div class="row justify-content-center"> -->
                <!-- <div class="col-xxl-10 col-xl-11 col-12"> -->

                <div class="row product_modal_wrapper">

                   <div class="col-lg-7 product_lightbox">

                      <div class="swiper product_swiper">
                        <div class="swiper-wrapper">

                          <div class="swiper-slide">
                            <img src="/images/<%= order.productId.imageurl %>" alt="product-img" />
                          </div>

                         </div>

                      </div>

                      <div thumbsSlider="" class="swiper thumb_swiper">
                        <div class="swiper-wrapper">

                          <div class="swiper-slide">
                            <img src="/images/<%= order.productId.imageurl %>" alt="product-img">
                          </div>


                        </div>
                      </div>

                    </div>

                    <div class="col-lg-5 product_details">

                      <div class="product_title">
                        <h4>
                          <%= order.productId.name %>

                        </h4>
                         <h6>
                          <%= order.productId.category %>

                        </h6>
                        <h6>

                          QTY: <%= order.quantity %>

                         </h6>
                      </div>

                        <div class="product_ratings">
                         <strong>&#9733;&#9733;&#9733;&#9733;<b class="text-muted">&#9733;</b></strong>
                          <a href="javascript:void(0);" class="ms-2">400
                          Ratings & Reviews</a>
                        </div>


                  <div class="product_price">
                    <b>â‚¹
                      <%= order.productId.price %>

                        <small>.00</small>
                    </b>
                  </div>

                  <div class="shipping_details">
                    <div>

                      <h4> NAME :
                        <b> <%= data.Name %> </b>
                      </h4>

                      <h4> PHONE :
                        <b> <%= data.Phone %> </b>
                      </h4>

                      <h4> ADDRESS :
                        <b>
                          <%= data.Address %> </b>
                      </h4>

                      <h4> PINCODE :
                        <b>  <%= data.Pincode %> </b>
                      </h4>

                      <h4> Payment Type : <b> <%= data.Payment %> </b> </h4>

                      <h4> Shipping Status : <b> <%= data.status %> </b> </h4>





                    </div>
                  </div>

                  <!-- <div class="product_btns">
                    <button type="button" class="cancel" id="order_cancel" data-product-id=" order.productId._id ">
                      <i class="bi"></i> &#160; Cancel
                      Order</button>

                  </div> -->

                  <div class="product_features">
                    <h5>Product Highlights -</h5>
                    <ul class="mt-3">
                      <li>

                       <%= order.productId.discription %>
                      </li>

                    </ul>
                  </div>

                </div>

                <!-- </div> -->


                <!-- </div> -->
                </div>

              </div>

              <div class="close_btn product_close" title="Close">
                <span></span>
                <span></span>
              </div>
          </section>

          <% })%>
            <% })%>


