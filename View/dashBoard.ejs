<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cam Cart Dashboard</title>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <!-- Include the tailwind CSS library -->
  <link href="/tailwind.css" rel="stylesheet" />
  <!-- Include the chartist CSS library -->
  <link href="/chartist.min.css" rel="stylesheet" />

  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet" />
  <link rel="stylesheet" href="Control-Dashboard-main/css/styles.css" />
  <link rel="stylesheet" href="Control-Dashboard-main/css/responsive.css" />
</head>

<body>
  <div class="container">
    <!-- ========== Sidebar ========== -->

    <aside>
      <div class="top">
        <div class="logo">
          <img src="Control-Dashboard-main/img/cam-cart-high-resolution-logo-black-transparent.svg" />
          <h2>Cam<span class="danger">Cart</span></h2>
        </div>
        <div class="close" id="close-btn">
          <span class="material-icons-sharp"> close </span>
        </div>
      </div>
      <div class="sidebar">
        <a href="/dashBoard">
          <span class="material-icons-sharp"> grid_view </span>
          <h3>Dashboard</h3>
        </a>
        <a href="/customers" class="active">
          <span class="material-icons-sharp"> person_outline </span>
          <h3>Customers</h3>
        </a>
        <a href="/products">
          <span class="material-icons-sharp"> photo_camera </span>
          <h3>Products</h3>
        </a>
        <a href="/order_List">
          <span class="material-icons-sharp"> receipt_long </span>
          <h3>Orders</h3>
        </a>

        <!-- <a href="/payments">
          <span class="material-icons-sharp"> paid </span>
          <h3>Payments</h3>
        </a> -->


        <!-- <a href="/StockDetails">
          <span class="material-icons-sharp"> inventory_2 </span>
          <h3>Stock Details</h3>
        </a> -->

        <!-- <a href="">
            <span class="material-icons-sharp"> insights </span>
            <h3>Analytics</h3>
          </a> -->


        <a href="/inbox">
          <span class="material-icons-sharp"> mail_outline </span>
          <h3>Messages</h3>
          <span class="message-count">26</span>
        </a>


        <a href="/salesReport">
          <span class="material-icons-sharp"> assignment </span>
          <h3>Sales Reports</h3>
        </a>


        <!-- <a href="#">
            <span class="material-icons-sharp"> settings </span>
            <h3>Settings</h3>
          </a> -->


        <a href="/addProduct">
          <span class="material-icons-sharp"> add </span>
          <h3>Add Product</h3>
        </a>
        <a href="#">
          <span class="material-icons-sharp"> logout </span>
          <h3>Logout</h3>
        </a>
      </div>
    </aside>

    <!-- ========== Main section ========== -->
    <main>
      <h1>Dashboard</h1>
      <div class="date">
        <input type="date" id="date-picker" />
      </div>
      <div class="insights">
        <!-- ---------- Sales ---------- -->
        <div class="sales">
          <canvas id="salesChart" width="1fr" height=""></canvas>
          <script>
            let monthSale = document.getElementById("salesChart");


            let saleChart = new Chart(monthSale, {
              type: 'line',
              data: {
                labels: ['1st Week', '2nd Week', '3rd Week', '4th Week'],
                datasets: [{
                  label: "Monthly Sale",
                  data: [
                    500000,
                    400000,
                    300000,
                    250000,

                  ],
                  backgroundColor: '#7380ec',
                  borderColor: ['rgb(75,192,192)'],
                }]
              },
              options: {

              }
            })
          </script>
        </div>

        <!-- ---------- Expenses ---------- -->
        <!-- <div class="expenses"></div> -->

        <!-- ---------- Income ---------- -->
        <!-- <div class="income"></div> -->

        <!-- ---------- Recent orders ---------- -->
        <div class="recent-orders">
          <h2>Recent Orders</h2>
          <table>
            <thead>
              <tr>
                <th>Product Name</th>
                <th>Product Number</th>
                <th>Payment</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <!-- <a href="#">Show All</a> -->
        </div>
    </main>

    <!-- ========== Right section ========== -->
    <div class="right">
      <!-- ---------- Top ---------- -->
      <div class="top">
        <button id="menu-btn">
          <span class="material-icons-sharp"> menu </span>
        </button>
        <div class="theme-toggler">
          <span class="material-icons-sharp active"> light_mode </span>
          <span class="material-icons-sharp"> dark_mode </span>
        </div>
        <div class="profile">
          <div class="info">
            <p>Hey, <b>
                <%= admin.name %>
              </b></p>
            <small class="text-muted">Admin</small>
          </div>
          <div class="profile-photo">
            <img src="Control-Dashboard-main/img/profile-1.jpg" alt="Daniel" />
          </div>
        </div>
      </div>

      <!-- ---------- Recent updates ---------- -->
      <div class="recent-updates">
        <h2>Recent Updates</h2>
        <div class="updates">
          <div class="update">
            <div class="profile-photo">
              <img src="Control-Dashboard-main/img/profile-2.jpg" alt="Mike" />
            </div>
            <div class="message">
              <p>
                <b>Mike Tyson</b> received his order of Night Lion tech GPS
                drone.
              </p>
              <small class="text-muted">2 Minutes Ago</small>
            </div>
          </div>
          <div class="update">
            <div class="profile-photo">
              <img src="Control-Dashboard-main/img/profile-3.jpg" alt="Diana" />
            </div>
            <div class="message">
              <p><b>Diana Ayi</b> declined her order of 2 DJI Air 2S.</p>
              <small class="text-muted">5 Minutes Ago</small>
            </div>
          </div>
          <div class="update">
            <div class="profile-photo">
              <img src="Control-Dashboard-main/img/profile-4.jpg" alt="Mandy" />
            </div>
            <div class="message">
              <p>
                <b>Mandy Roy</b> received her order of LARVENDER KF102 Drone.
              </p>
              <small class="text-muted">6 Minutes Ago</small>
            </div>
          </div>
        </div>
      </div>

      <!-- ---------- Sales analytics ---------- -->
      <div class="sales-analytics">
        <h2>Sales Analytics</h2>
        <div class="item online">
          <div class="icon">
            <span class="material-icons-sharp"> shopping_cart </span>
          </div>
          <div class="right">
            <div class="info">
              <h3>ONLINE ORDERS</h3>
              <small class="text-muted">Last 24 Hours</small>
            </div>
            <h5 class="success">+39%</h5>
            <h3>3849</h3>
          </div>
        </div>
        <div class="item offline">
          <div class="icon">
            <span class="material-icons-sharp"> local_mall </span>
          </div>
          <div class="right">
            <div class="info">
              <h3>OFFLINE ORDERS</h3>
              <small class="text-muted">Last 24 Hours</small>
            </div>
            <h5 class="danger">-17%</h5>
            <h3>1100</h3>
          </div>
        </div>
        <div class="item customers">
          <div class="icon">
            <span class="material-icons-sharp"> person </span>
          </div>
          <div class="right">
            <div class="info">
              <h3>NEW CUSTOMERS</h3>
              <small class="text-muted">Last 24 Hours</small>
            </div>
            <h5 class="success">+25%</h5>
            <h3>849</h3>
          </div>
        </div>
        <div class="item add-product">
          <div>
            <span class="material-icons-sharp"> add </span>
            <h3>Add Product</h3>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="Control-Dashboard-main/js/index.js"></script>


</body>

</html>